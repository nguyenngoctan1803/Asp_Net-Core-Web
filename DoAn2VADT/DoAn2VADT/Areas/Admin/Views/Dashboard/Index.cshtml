@using DoAn2VADT.Database.Entities
@using PagedList.Core.Mvc
@model IEnumerable<DoAn2VADT.Database.Entities.Product>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}
<div class="row"> 
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số hóa đơn</p>
                        <h2 class="m-b-0">
                            <span>@ViewBag.Orders.Count</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-red">
                        <i class="anticon anticon-profile"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số khách hàng</p>
                        <h2 class="m-b-0">
                            <span>@ViewBag.Customers.Count</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-cyan">
                        <i class=" anticon anticon-user"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số sản phẩm</p>
                        <h2 class="m-b-0">
                            <span>@ViewBag.Products.Count</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-gold">
                        <i class="anticon anticon-book"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số thương hiệu</p>
                        <h2 class="m-b-0">
                            <span>@ViewBag.Brands.Count</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-red">
                        <i class="anticon anticon-meh"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Tổng doanh thu</p>
                        <h2 class="m-b-0">
                            <span> @(ViewBag.SumOrTotal.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Tổng chi</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.SumInTotal.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-euro"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Lợi nhuận</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Revenue.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-euro"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="chat chat-app row col-md-4 card">
        <div class="card  col-md-12">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Mặt hàng</h5>
                    <div>
                        <a class=" btn-default">@ViewBag.Categories.Count</a>
                    </div>
                </div>
                <div class="table-responsive m-t-30">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Progress</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var b in ViewBag.Categories)
                                {
                                    <tr>
                                        <td>
                                            <span>@b.Name</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress progress-sm w-100 m-b-0">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="chat chat-app col-md-8 card">
        <div class="col-md-12 card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Các sản phẩm bán chạy</h5>
                </div>
                <div class="m-t-30">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Tên</th>
                                    <th>Giá bán</th>
                                    <th>Số lượng còn lại</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @item.Id
                                            </td>
                                            <td>
                                                <img width="60" height="90" src="~/images/product/@item.Image" alt="@item.Name" />
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Price VNĐ</td>
                                            <td>@item.Quantity</td>
                                            <td>
                                                @if (item.Quantity > 0)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="badge badge-success badge-dot m-r-10"></div>
                                                        <div>Còn hàng</div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="badge badge-danger badge-dot m-r-10"></div>
                                                        <div>Hết hàng</div>
                                                    </div>
                                                }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
