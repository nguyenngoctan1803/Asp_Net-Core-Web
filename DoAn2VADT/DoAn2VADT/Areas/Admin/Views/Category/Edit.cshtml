@model DoAn2VADT.Database.Entities.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <!-- Main content -->
        <form asp-action="Edit">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                        <a asp-controller="Category" asp-action="Index" class="breadcrumb-item">Danh mục</a>
                        <span class="breadcrumb-item active">Edit</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->

            <div class="card-header">
                <div class="row">
                    <div class=" col-md-6">
                        
                    </div>
                    <div class=" col-md-6 text-right">
                         <a class=" btn btn-success fas fa-undo-alt" asp-action="Index"></a>
                        <button class="btn btn-primary fas fas fa-save " type="submit">Cập nhật</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="UpdatedAt" />
                <input type="hidden" asp-for="DeletedAt" />
                <input type="hidden" asp-for="CreateUserId" />
                <input type="hidden" asp-for="UpdateUserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                 <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <!-- /.card-body -->

        </form>
    </div>

    <!-- /.content -->
</div>
