@model DoAn2VADT.Database.Entities.Brand

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                    <a asp-controller="Brand" asp-action="Index" class="breadcrumb-item">Thương hiệu</a>
                    <span class="breadcrumb-item active">Thêm thương hiệu</span>
                </nav>
            </div>
        </div>
        <!-- Default box -->

        <div class="card-header">
            <div class="row">
                <div class=" col-md-6">
                    
                </div>
                <div class=" col-md-6 text-right">
                    <a class=" btn btn-primary fas fa-undo-alt" asp-action="Index"></a>
                    <a class=" btn btn-success fas fa-edit" asp-action="Edit" asp-route-id="@Model.Id"> </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Name)</div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Description)</div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.content -->
</div>