@model DoAn2VADT.Database.Entities.Customer

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <!-- Main content -->
        <section class="content my-2">
            <form asp-action="Details">
                <div class="page-header">
                    <div class="header-sub-title">
                        <nav class="breadcrumb breadcrumb-dash">
                            <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                            <a asp-controller="Customer" asp-action="Index" class="breadcrumb-item">Danh sách</a>
                            <span class="breadcrumb-item active">Chi tiết</span>
                        </nav>
                    </div>
                </div>
                <!-- Default box -->

                <div class="card-header">
                    <div class="row">
                        <div class=" col-md-6">
                        </div>
                        <div class=" col-md-6 text-right">
                            <a class=" btn btn-primary fas fa-undo-alt" asp-action="Index"></a>
                            <a class=" btn btn-success fas fa-edit" asp-action="Edit" asp-route-id="@Model.Id"> </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Tên</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Số điện thoại</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Phone)</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Email</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Địa chỉ</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Address)</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Mật khẩu</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Password)</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Ngày tạo</label>
                            <div class="form-control">@Html.DisplayFor(model => model.CreatedAt)</div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

            </form>
        </section>
    </div>
    <!-- /.content -->
</div>