@model DoAn2VADT.Database.Entities.Account

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <!-- Main content -->
        <section class="content my-2">
            <form asp-action="Details">
                <div class="page-header">
                    <div class="header-sub-title">
                        <nav class="breadcrumb breadcrumb-dash">
                            <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                            <a asp-controller="Account" asp-action="Index" class="breadcrumb-item">Danh sách</a>
                            <span class="breadcrumb-item active">Chi tiết</span>
                        </nav>
                    </div>
                </div>
                <!-- Default box -->

                <div class="card-header">
                    <div class="row">
                        <div class=" col-md-6">
                        </div>
                        <div class=" col-md-6 text-right">
                            <a class=" btn btn-primary fas fa-undo-alt" asp-action="Index"></a>
                            <a class=" btn btn-success fas fa-edit" asp-action="Edit" asp-route-id="@Model.Id"> </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Tên đăng nhập</label>
                            <div class="form-control">@Html.DisplayFor(model => model.UserName)</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Tên người sử dụng</label>
                            <div class="form-control">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                    </div>
                    
                    <div class=" row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="ShortDesc">Mật khẩu</label>
                            <div class="form-control">
                                @Html.DisplayFor(model => model.Password)
                            </div>
                            
 
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Quyền </label>
                            <div class="form-control">
                                @if (Model.Role == "1")
                                {
                                      <span class="badge badge-success rounded-pill d-inline">Admin</span>
                                }
                                else
                                {
                                      <span class="badge badge-success rounded-pill d-inline">User</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

            </form>
        </section>
    </div>
    <!-- /.content -->
</div>